%\begin{macro}{\@@_cref}
%	This is just a wrapper around \pkg{cleveref}'s |\cref|.
%	Additionally the \cs{@@_Processor} gets called.
%    \begin{macrocode}
\bool_new:N \l_@@_option_has_been_chosen_bool
\clist_new:N \l_@@_local_options_clist
\cs_new:Nn \@@_define_from_orig:NN
  {
    \NewDocumentCommand #1 { s o m }
      {
        \IfValueTF { ##2 }
          {
            \bool_set_false:N \l_@@_option_has_been_chosen_bool
            \clist_set:Nn \l_@@_local_options_clist { ##2 }
            \clist_put_right:No \l_@@_local_options_clist { \l_@@_default_package_option_tl }
            \clist_map_inline:Nn \l_@@_local_options_clist
              {
                \str_case:xnT { \str_foldcase:n { ####1 } }
                  {
                    {usedon} {}
                    {uo}     {}
                    {usedby} {}
                    {ub}     {}
                    {usedbyandon} {}
                    {ubao}        {}
                  }
                  {
                    \clist_remove_all:Nn \l_@@_local_options_clist { ####1 }
                    \bool_if:NF \l_@@_option_has_been_chosen_bool
                      {
                        \@@_Processor[####1]{##3}
                      }
                    \bool_set_true:N \l_@@_option_has_been_chosen_bool
                  }
              }
            \clist_if_empty:NTF \l_@@_local_options_clist
              {
                \IfBooleanTF{##1}{ #2*{##3} }{ #2{##3} }
              }
              {
                \IfBooleanTF{##1}{ #2*[\l_@@_local_options_clist]{##3} }{ #2[\l_@@_local_options_clist]{##3} }
              }
          }
          {
            \tl_if_blank:VF \l_@@_default_package_option_tl
              {
                \clist_clear:N \l_@@_local_options_clist
                \clist_put_right:No \l_@@_local_options_clist { \l_@@_default_package_option_tl }
                \clist_map_inline:Nn \l_@@_local_options_clist
                  {
                    \@@_Processor[####1]{##3}
                  }
              }
            \IfBooleanTF{##1}{ #2*{##3} }{ #2{##3} }
          }
      }
  }
